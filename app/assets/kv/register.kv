<RegisterScreen>:
    name: "register"

    canvas.before:
        Color:
            rgba: 0.05, 0.1, 0.2, 1  # Bleu marine
        Rectangle:
            pos: self.pos
            size: self.size

    MDFloatLayout:
        MDCard:
            size_hint: 0.9, 0.85
            pos_hint: {"center_x": 0.5, "center_y": 0.5}
            md_bg_color: 0.09, 0.13, 0.2, 0.95
            elevation: 16
            padding: dp(20)
            radius: [25, 25, 25, 25]
            orientation: "vertical"
            spacing: dp(15)

            MDLabel:
                text: "Créer un compte"
                halign: "center"
                font_style: "H5"
                theme_text_color: "Custom"
                text_color: 1, 1, 1, 1

            MDTextField:
                id: username
                hint_text: "Nom d'utilisateur"
                icon_right: "account"
                mode: "rectangle"
                line_color_normal: 0.3, 0.5, 0.8, 1
                text_color: 1, 1, 1, 1
                icon_right_color: 1, 1, 1, 1
                radius: [10, 10, 10, 10]

            MDTextField:
                id: password
                hint_text: "Mot de passe"
                icon_right: "lock"
                password: True
                mode: "rectangle"
                line_color_normal: 0.3, 0.5, 0.8, 1
                text_color: 1, 1, 1, 1
                icon_right_color: 1, 1, 1, 1
                radius: [10, 10, 10, 10]

            MDTextField:
                id: telephone
                hint_text: "Téléphone (+212...)"
                text: "+212"
                icon_right: "phone"
                mode: "rectangle"
                line_color_normal: 0.3, 0.5, 0.8, 1
                text_color: 1, 1, 1, 1
                icon_right_color: 1, 1, 1, 1
                radius: [10, 10, 10, 10]
                max_text_length: 13
                # ❌ ENLÈVE CETTE LIGNE :
                # input_filter: "int"

            MDTextField:
                id: role
                hint_text: "Rôle"
                icon_right: "account-tie"
                mode: "rectangle"
                on_focus: if self.focus: app.open_role_menu()
                line_color_normal: 0.3, 0.5, 0.8, 1
                text_color: 1, 1, 1, 1
                icon_right_color: 1, 1, 1, 1
                radius: [10, 10, 10, 10]

            MDRaisedButton:
                text: "S'enregistrer"
                pos_hint: {"center_x": 0.5}
                md_bg_color: 0.2, 0.6, 1, 1
                text_color: 1, 1, 1, 1
                size_hint_x: 0.6
                height: dp(45)
                radius: [12, 12, 12, 12]
                on_release: root.do_register()

            MDTextButton:
                text: "← Retour à la connexion"
                pos_hint: {"center_x": 0.5}
                theme_text_color: "Custom"
                text_color: 1, 1, 1, 1
                on_release: root.go_back_to_login()
