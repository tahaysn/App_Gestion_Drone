<TelepiloteDashboard>:
    name: "telepilote_dashboard"

    MDBoxLayout:
        orientation: "vertical"

        MDTopAppBar:
            title: "Dashboard Télépilote"
            elevation: 4
            left_action_items: [["arrow-left", lambda x: root.go_back()]]
            right_action_items: [["logout", lambda x: app.logout()]]
            md_bg_color: 0.05, 0.1, 0.2, 1
            specific_text_color: 1, 1, 1, 1

        MDBoxLayout:
            orientation: "vertical"
            padding: dp(20)
            spacing: dp(20)
            md_bg_color: 0.05, 0.1, 0.2, 1

            GridLayout:
                cols: 2
                spacing: dp(20)
                size_hint_y: None
                height: dp(160)
                size_hint_x: None
                width: self.minimum_width
                pos_hint: {"center_x": 0.5}  # En haut par défaut

                MDCard:
                    orientation: "vertical"
                    size_hint: None, None
                    size: dp(150), dp(150)
                    ripple_behavior: True
                    md_bg_color: 0.1, 0.2, 0.3, 1
                    elevation: 8
                    on_release: root.goto_my_schedule()

                    MDBoxLayout:
                        orientation: "vertical"
                        padding: dp(20)
                        spacing: dp(10)
                        pos_hint: {"center_x": 0.5, "center_y": 0.5}

                        MDIcon:
                            icon: "calendar"
                            halign: "center"
                            font_size: "32sp"
                            theme_text_color: "Custom"
                            text_color: 1, 1, 1, 1

                        MDLabel:
                            text: "Schedule"
                            halign: "center"
                            theme_text_color: "Custom"
                            text_color: 1, 1, 1, 1

                MDCard:
                    orientation: "vertical"
                    size_hint: None, None
                    size: dp(150), dp(150)
                    ripple_behavior: True
                    md_bg_color: 0.1, 0.2, 0.3, 1
                    elevation: 8
                    on_release: root.goto_my_schedule()

                    MDBoxLayout:
                        orientation: "vertical"
                        padding: dp(20)
                        spacing: dp(10)
                        pos_hint: {"center_x": 0.5, "center_y": 0.5}

                        MDIcon:
                            icon: "clipboard-list"
                            halign: "center"
                            font_size: "32sp"
                            theme_text_color: "Custom"
                            text_color: 1, 1, 1, 1

                        MDLabel:
                            text: "My Schedule"
                            halign: "center"
                            theme_text_color: "Custom"
                            text_color: 1, 1, 1, 1
